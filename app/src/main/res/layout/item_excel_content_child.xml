<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="100dp"
    android:layout_height="50dp"
    android:id="@+id/layout_excel_content_child"
    android:background="@drawable/selector_click_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_excel_content_top"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="12sp" />

    <View
        android:id="@+id/view_excel_content_mid"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/frame_line" />

    <TextView
        android:gravity="center"
        android:id="@+id/tv_excel_content_bottom"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:textColor="@color/black"
        android:textSize="12sp" />
</LinearLayout>
